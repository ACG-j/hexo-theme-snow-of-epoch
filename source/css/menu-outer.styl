#menu-outer
  width 100%
  background linear-gradient(to right, rgba(252, 251, 249, 0.95), rgba(250, 247, 245, 0.95))
  box-shadow 0 2px 15px rgba(0, 0, 0, 0.05)
  position fixed
  top 0
  z-index 1000
  backdrop-filter blur(10px)
  border-bottom 1px solid rgba(200, 180, 160, 0.2)

  &:before
    content ""
    position absolute
    top 0
    left 0
    right 0
    height 2px
    background linear-gradient(90deg, transparent, rgba(139, 69, 19, 0.2), transparent)

#menu-inner
  max-width 1200px
  margin 0 auto
  padding 1rem 2rem
  display flex
  justify-content center
  align-items center
  
  a
    position relative
    color #4A4A4A
    text-decoration none
    padding 0.6rem 1.8rem
    margin 0 1rem
    font-size 1.1rem
    letter-spacing 0.08em
    transition all 0.4s cubic-bezier(0.4, 0, 0.2, 1)
    font-family "Microsoft YaHei", "微软雅黑", sans-serif
    background linear-gradient(to right, transparent 50%, rgba(139, 69, 19, 0.05) 50%)
    background-size 200% 100%
    background-position 0 0
    
    &:before
      content ""
      position absolute
      bottom 0
      left 50%
      width 0
      height 1px
      background #8B4513
      transition all 0.4s cubic-bezier(0.4, 0, 0.2, 1)
      transform translateX(-50%)
      opacity 0
    
    &:hover
      color #8B4513
      transform translateY(-1px)
      background-position -100% 0
      
      &:before
        width 90%
        opacity 1
    
    &:after
      content ""
      position absolute
      top 50%
      right -1px
      width 1px
      height 1rem
      background linear-gradient(to bottom, transparent, rgba(139, 69, 19, 0.2), transparent)
      transform translateY(-50%)
    
    &:last-child:after
      display none
    
    // 添加水墨效果
    &:before
      box-shadow 0 0 8px rgba(139, 69, 19, 0.1)
      filter blur(0.5px)

// 移动端适配
@media screen and (max-width: 768px)
  #menu-outer
    background rgba(252, 251, 249, 0.98)

  #menu-inner
    padding 0.6rem 1rem
    flex-wrap wrap
    justify-content center

    a
      padding 0.5rem 1.2rem
      margin 0.4rem 0.6rem
      font-size 1rem
      background-size 100% 100%
      background-position 0 0
      letter-spacing 0.05em
      
      &:after
        display none
      
      &:hover
        transform translateY(0)
        background-position 0 0
        
      &:before
        height 2px
        bottom -2px
