
body
  margin 0
  
#bottom-outer
  margin-top 4rem
  padding 2rem 0
  position relative
  
  // 上方水墨边框
  &:before
    content ""
    position absolute
    top 0
    left 50%
    transform translateX(-50%)
    width 80%
    height 1px
    background linear-gradient(90deg, transparent, rgba(139, 69, 19, 0.2), transparent)
  
  // 装饰性山水画元素
  &:after
    content ""
    position absolute
    top 1px
    left 50%
    transform translateX(-50%)
    width 40px
    height 2px
    background linear-gradient(90deg, rgba(139, 69, 19, 0.1), transparent, rgba(139, 69, 19, 0.1))

#bottom-inner
  max-width 800px
  margin 0 auto
  text-align center
  font-family "楷体", KaiTi, serif
  color #666
  font-size 0.9rem
  line-height 1.8
  padding 0 2rem
  
  a
    color #8B4513
    text-decoration none
    position relative
    transition all 0.3s ease
    padding 0 2px
    
    // 下划线效果
    &:after
      content ""
      position absolute
      bottom -2px
      left 0
      width 0
      height 1px
      background rgba(139, 69, 19, 0.3)
      transition width 0.3s ease
    
    &:hover
      color #000
      
      &:after
        width 100%
  
  br
    display block
    margin 0.5rem 0

#paginator
  display flex
  justify-content center
  align-items center
  margin 3rem auto
  font-family "楷体", KaiTi, serif
  
  .page-number,
  .extend
    display inline-block
    margin 0 0.5rem
    padding 0.5rem 1rem
    color #4A4A4A
    text-decoration none
    border-radius 4px
    transition all 0.3s ease
    position relative
    background rgba(252, 251, 249, 0.7)
    
    // 水墨效果边框
    &:before
      content ""
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      border 1px solid rgba(139, 69, 19, 0.1)
      border-radius 4px
      transition all 0.3s ease
    
    // 悬浮效果
    &:hover
      color #8B4513
      transform translateY(-2px)
      background rgba(139, 69, 19, 0.05)
      
      &:before
        border-color rgba(139, 69, 19, 0.3)
        box-shadow 0 4px 8px rgba(139, 69, 19, 0.1)
    
  // 当前页样式
  .current
    color #8B4513
    background rgba(139, 69, 19, 0.08)
    font-weight bold
    
    &:before
      border-color rgba(139, 69, 19, 0.2)
    
    &:hover
      transform none
      background rgba(139, 69, 19, 0.08)
  
  // 上一页下一页特殊样式
  .extend
    font-family "宋体", SimSun, serif
    position relative
    padding-left 1.5rem
    padding-right 1.5rem
    
    &.prev:before,
    &.next:before
      content ""
      position absolute
      top 50%
      width 12px
      height 1px
      background rgba(139, 69, 19, 0.5)
      transition width 0.3s ease
    
    &.prev
      padding-left 2rem
      
      &:before
        left 0.5rem
        transform-origin left center
        transform rotate(-45deg)
      
      &:after
        content ""
        position absolute
        left 0.5rem
        top calc(50% - 4px)
        width 12px
        height 1px
        background rgba(139, 69, 19, 0.5)
        transform-origin left center
        transform rotate(45deg)
    
    &.next
      padding-right 2rem
      
      &:before
        right 0.5rem
        transform-origin right center
        transform rotate(45deg)
      
      &:after
        content ""
        position absolute
        right 0.5rem
        top calc(50% - 4px)
        width 12px
        height 1px
        background rgba(139, 69, 19, 0.5)
        transform-origin right center
        transform rotate(-45deg)
    
    &:hover
      &:before,
      &:after
        width 16px
        background rgba(139, 69, 19, 0.8)

// Pjax 加载指示器
#pjax-loading-bar
  position fixed
  top 0
  left 0
  right 0
  height 2px
  z-index 99999
  opacity 0
  transform translateY(-100%)
  transition all 0.3s ease
  pointer-events none
  
  &.active
    opacity 1
    transform translateY(0)
    
  .loading-progress
    height 100%
    width 0
    background linear-gradient(to right,
      transparent,
      rgba(139, 69, 19, 0.2),
      rgba(139, 69, 19, 0.6),
      rgba(139, 69, 19, 0.2),
      transparent)
    animation loading-progress 1s ease infinite
    transform-origin left
    
// 内容区域动画
#content-inner
  opacity 1
  transform translateY(0) scale(1)
  filter blur(0)
  transition all 0.6s cubic-bezier(0.4, 0, 0.2, 1)
  position relative
  
  // 水墨退场动画
  &.ink-fade-out
    opacity 0
    transform translateY(-20px) scale(0.98)
    filter blur(2px)
    
  // 水墨进场动画
  &.ink-fade-in
    animation ink-spread 0.8s cubic-bezier(0.4, 0, 0.2, 1)

// 加载进度条动画
@keyframes loading-progress
  0%
    width 0
    transform scaleX(0)
  50%
    width 100%
    transform scaleX(1)
  100%
    width 100%
    transform scaleX(0)
    transform-origin right

// 水墨扩散动画
@keyframes ink-spread
  0%
    opacity 0
    transform translateY(20px) scale(0.96)
    filter blur(2px)
  50%
    opacity 0.8
    transform translateY(10px) scale(0.98)
    filter blur(1px)
  100%
    opacity 1
    transform translateY(0) scale(1)
    filter blur(0)
